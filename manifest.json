{
  "manifest_version": 3,
  "name": "CO2 Tracker",
  "version": "1.0",
  "description": "Show URL on each page!",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/popup.js"] 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/popup.js", "src/popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  }
}
